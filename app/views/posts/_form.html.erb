<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <div class="card" >
        <div class="card-header bg-success">
          <%= @toukou %>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="form-group col-sm-3">
              <%= form.label :category, 'カテゴリを選ぶ' %>
              <%= form.select :category, {'見る／遊ぶ':0,'食べる':1,'泊まる':2},{ include_blank: "選択して下さい"},{ class: 'form-control' , required: true } %>
            </div>
          </div>
            
          <div class="form-group">
            <%= form.label :title, 'タイトルを入力' %>
            <%= form.text_field :title, { class: 'form-control', required: true } %>  <%# required: trueで空の送信を防ぐ %>
          </div>
          
          <div class="row">
　          <div class="form-group">
              <%= form.label :area, 'エリアを入力' %>
              <%= form.text_field :area, { class: 'form-control' } %>
            </div>

            <div class="form-group col-sm-8">
              <%= form.label :subtitle, 'サブタイトルを入力' %>
              <%= form.text_field :subtitle, { class: 'form-control' } %>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :content, '詳細情報を入力（概要、おすすめ内容など）' %>
            <%= form.text_area :content, { class: 'form-control' } %>
          </div>
            
          <div class="form-group clo-sm-6">
            <%= form.label :image, 'フォト' %>
            <%= form.file_field :image %>
          </div>

          <div class="actions">
            <%= form.submit '投稿する', class: 'btn btn-success btn-block' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
