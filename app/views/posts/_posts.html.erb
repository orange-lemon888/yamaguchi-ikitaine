<% if posts.any? %>
  <ul class="list-unstyled">
    <% posts.each do |post| %>
      <li class="media mb-3">
        
        <div class="media-body">
          <div>
          <%= link_to post.title, post_path(post) %> <span class="text-muted">投稿日 <%= post.created_at %></span>
          </div>
          <div>
            <p><%= post.content %></p>
          </div>
        </div>
      </li>
    <% end %>
    <%= paginate posts %>
  </ul>
<% end %>