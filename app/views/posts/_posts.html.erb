<% if posts.any? %>
  <ul class="list-unstyled">
    <% posts.each do |post| %>
      <li class="media mb-3">
        
        <div class="media-body">
          <%= post.category %>
          <div>
            <%= link_to post.title, post_path(post) %> 
          </div>
          <div>
            <%#= post.image %>
            <img src="post.image" class="img-rounded img-responsive" >
            <%#= image_tag "post.image" %>
          </div>
          
          <span class="text-muted"><%= post.area %><%= post.created_at %></span>
          <div>
            <%= post.subtitle %>
            <%#= post.user %>
          </div>
          
          <div>
            <%= '💛行きたいね' %>
          </div>
          <div>
            <%= post.content %>
          </div>
        </div>
        <%# ----------投稿者であれば削除できるようにする ------------%>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
    <%= paginate posts %>
  </ul>
<% end %>